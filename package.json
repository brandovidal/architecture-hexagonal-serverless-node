{
  "name": "architecture-hexagonal-node",
  "version": "1.0.0",
  "description": "",
  "main": "build/src/app/start.js",
  "scripts": {
    "deps": "pnpm run db:init && pnpm run db:generate",
    "dev": "concurrently --kill-others-on-fail \"dotenv -e .env.dev -- ts-node-dev --no-notify --respawn --transpile-only src/apps/start.ts\"",
    "dev:start": "dotenv -e .env.dev -- ts-node-dev --no-notify --respawn --transpile-only lambda.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "concurrently --kill-others-on-fail \"pnpm run test:unit\"",
    "test:unit": "dotenv -e .env.test -- vitest --project unit",
    "test:features": "dotenv -e .env.test -- vitest --project features",
    "test:ci": "dotenv -e .env.test -- vitest --project unit --run",
    "test:ui": "dotenv -e .env.test -- vitest --ui",
    "build": "pnpm run clean:build && tsc",
    "package:dev": "serverless package --stage dev --verbose",
    "package:qa": "serverless package --stage qa --verbose",
    "package": "serverless package --stage prod --verbose",
    "deploy:dev": "serverless deploy --stage dev --verbose",
    "deploy:qa": "serverless deploy --stage qa --verbose",
    "deploy": "serverless deploy --stage prod --verbose",
    "destroy:qa": "serverless destroy --stage qa --verbose",
    "destroy": "serverless destroy --stage prod --verbose",
    "start": "dotenv -e .env -- node ./dist/src/apps/start.js",
    "start:qa": "dotenv -e .env.qa -- node ./dist/src/apps/start.js",
    "start:serverless": "dotenv -e .env -- node .serverless/dist/lambda.js",
    "docs": "tsoa spec",
    "clean:build": "rimraf dist public",
    "clean:install": "rimraf node_modules package-lock.json yarn.lock pnpm-lock.yaml bun.lockb",
    "clean": "pnpm run clean:build && pnpm run clean:install",
    "db:init": "docker pull mongo:latest",
    "db:generate": "docker run -d -p 27017:27017 --name=architecture-hexagonal-node-db mongo",
    "db:stop": "docker stop architecture-hexagonal-node-db",
    "db:start": "docker exec -it architecture-hexagonal-node-db mongo",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bson": "6.2.0",
    "cors": "2.8.5",
    "dayjs": "1.11.10",
    "express": "4.18.2",
    "glob": "10.3.10",
    "helmet": "7.1.0",
    "http-status": "1.7.3",
    "inversify": "6.0.2",
    "mongodb": "5.2.0",
    "morgan": "1.10.0",
    "reflect-metadata": "0.2.1",
    "serverless-http": "3.2.0",
    "swagger-ui-express": "5.0.0",
    "tsoa": "6.0.0",
    "typeorm": "0.3.17",
    "uuid": "9.0.1",
    "uuid-validate": "0.0.3",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "8.3.1",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.11",
    "@types/morgan": "1.9.9",
    "@types/node": "20.10.6",
    "@types/supertest": "6.0.2",
    "@types/swagger-ui-express": "4.1.6",
    "@types/uuid": "9.0.7",
    "@types/uuid-validate": "0.0.3",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@vitest/ui": "1.1.2",
    "concurrently": "8.2.2",
    "dotenv": "16.3.1",
    "dotenv-cli": "7.3.0",
    "env-var": "7.4.1",
    "eslint": "8.56.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "^8.0.0",
    "rimraf": "5.0.5",
    "serverless": "3.38.0",
    "serverless-dotenv-plugin": "6.0.0",
    "serverless-esbuild": "1.50.1",
    "serverless-offline": "13.3.2",
    "serverless-prune-plugin": "2.0.2",
    "supertest": "6.3.3",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3",
    "vitest": "1.1.2"
  }
}
